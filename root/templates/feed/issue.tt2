[% # This generic statement belongs at the start of every template %]
[% PROCESS identify_templates(my_component=component.name) IF c.config.debug_view %]

  <div id="issues-new" class="layout-box" style="padding: 15px 24px;">

   <h4>Existing Issues</h4>
  <br />
  [% issue_table(issues,issue_type) %]
  <br /><br />

  [% IF url %]
    <h4>Create new issue</h4>
    [% user_login_info %]
	<table id="issueTable" width="70%">
		<tr>
			<th width="10%">Title:</th>
			<td colspan="2" ><input [% UNLESS c.user_exists; 'disabled=1'; END %] class="issue-text" id="title" maxlength="100"  type="text" name="title"  /></td>
		</tr>
				 
		<tr>
			<th width="10%">Content:</th>
			<td colspan="2" >
				<textarea [% UNLESS c.user_exists; 'disabled=1'; END %] class="issue-text" id="content" rows="10"     name="content"  ></textarea>
			</td>
		</tr>
	</table>

	  </br><p>
	    <input type='submit' [% UNLESS c.user_exists; 'disabled=1'; END %] value='Report Your Issue' class="issue-submit" page="[% page %]" url="[% url %]" rel="[% c.uri_for('/rest','feed','issue') %]" /> 
	  </p>


  [% END %]

   </div>
 

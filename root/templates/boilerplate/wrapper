[% IF template.name.match('\.(css|js|txt)');
     debug("Passing page through as text: $template.name");
     content;

   ELSIF (c.stash.noboiler);
     debug("Passing request through without wrapping: $template.name");
     content;

   ELSIF (template.name.match('index'));   	 
         content WRAPPER boilerplate/html + boilerplate/layout;
  
   ELSIF (c.stash.unbuffer);
     debug("Passing widget: $template.name through without wrapping");
     content;
   ELSE;
     debug("Applying HTML page layout wrappers to $template.name\n");

     IF is_classic;
          content WRAPPER boilerplate/html + boilerplate/layout;
     ELSE;
          content WRAPPER boilerplate/html + boilerplate/layout + boilerplate/search;     
     END;

   END;
-%]


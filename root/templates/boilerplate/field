[%#

    NAME  : field
    TYPE   : wrapper
    STASH : title (to become the title of the field)

%]

[% # This generic statement belongs at the start of every template %]
[% PROCESS identify_templates(this_component=component.name) IF c.config.debug_view %]

<div class="field" id="[% title FILTER html %]">
     <div class="field-title">

        [%# Is there a description? Set it as a tool tip %]
        [% IF fields.$key.description %]
           <a title="[% fields.$key.description %]">
             [% title %]
           </a>
        [% ELSE %]
            [% title %]
        [% END %]
	</div>
	<div class="field-content">
        [% content %]
     </div>
</div>
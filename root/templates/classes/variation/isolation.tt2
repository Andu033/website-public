[% # This generic statement belongs at the start of every template %]
[% PROCESS identify_templates(my_component=component.name) IF c.config.debug_view %]

[% widget = widget %]

   [% WRAPPER $field_block title="Laboratory Of Origin" key="laboratory_of_origin" %]
         <a href="[% c.uri_for_action('report', 'laboratory' , fields.laboratory_of_origin.data ) %]">[% fields.laboratory_of_origin.data %]</a>
   [% END %]

   [% WRAPPER $field_block title="Isolate By (author)" key="isolated_by_author" %]
         <a href="[% c.uri_for_action('report', 'person' , fields.isolated_by_author ) %]">[% fields.isolated_by_author %]</a>
   [% END %]

   [% WRAPPER $field_block title="Isolated By" key="isolated_by" %]
         <a href="[% c.uri_for_action('report', 'person' , fields.isolated_by ) %]">[% fields.isolated_by %]</a>
   [% END %]

   [% WRAPPER $field_block title="Source Database" key="source_database" %]
	 <a href="[% fields.source_database.data.remote_url %]">[% fields.source_database.data.remote_text %]</a>
   [% END %]

   [% WRAPPER $field_block title="Date Isolated" key="date_isolated" %]
        [% fields.date_isolated.data %]
   [% END %]

   [% WRAPPER $field_block title="Mutagen" key="mutagen" %]
      	      [% fields.mutagen.data %]
   [% END %]

   <p class="caveat-emptor">How are these tags used?</p>

   [% WRAPPER $field_block title="Isolated Via Forward Genetics" key="isolated_via_forward_genetics" %]
      	      [% fields.isolated_via_forward_genetics.data %]
   [% END %]

   [% WRAPPER $field_block title="Isolated Via Reverse Genetics" key="isolated_via_reverse_genetics" %]
      	      [% fields.isolated_via_reverse_genetics.data %]
   [% END %]

   [% WRAPPER $field_block title="Transposon Excision" key="transposon_excision" %]
      	      [% fields.transposon_excision.data %]
   [% END %]

   [% WRAPPER $field_block title="Transposon Insertion" key="transposon_insertion" %]
      	      [% fields.transposon_insertion.data %]
   [% END %]

   [% WRAPPER $field_block title="Derived From" key="derived_from" %]
      	      [% fields.derived_from.data %]
   [% END %]

   [% WRAPPER $field_block title="Derivate" key="derivative" %]
      	      [% fields.derivative.data.join(" ") %]
   [% END %]
